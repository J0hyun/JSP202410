    pageEncoding="UTF-8"%>
<%@ taglib prefix="c" uri="jakarta.tags.core" %>

<html>
<head><title>JSTL - if</title></head>
<body>
	<c:set var="number" value="100"></c:set>    
	<c:set var="string" value="JSP"></c:set>
	
	<h4>JSTL if 테크로 홀/짝수 판별</h4>
	<c:if test="${(number mod 2) eq 0 }" var="result">
		${number}는 짝수 입니다. <br> 
	</c:if>    
	result : ${result}<br>
</body>
